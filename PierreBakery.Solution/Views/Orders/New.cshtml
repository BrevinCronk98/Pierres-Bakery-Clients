@using PierresBakery.Models;

<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Pierres Client Tracker</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
            <form action="/vendors/@Model.Id/orders" method="post">
            <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
            <label for="description">Add a New Decription or Item for the Vendor!</label>
            <input id="description" name="description" type="text">
            <button type="submit">Submit</button>
        </form>
        </div>
    </body>

</html>
        