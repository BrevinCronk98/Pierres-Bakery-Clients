@using PierresBakery.Models

<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Pierres Client Tracker</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
        <h1> Vendors </h1>
            @if (Model.Count == 0)
            {
                <p>There are no Vendors in the list. </p>
            }
            <ul>
            @foreach (Vendor vendor in Model)
            {
                <h3><a href='vendors/@vendor.Id'> @vendor.Name</a> </h3>
            }
            </ul>
            <button onclick='window.location="/"'>Back Home</button>
            <form action="/vendors/delete" method="post">
             <button type="submit">Clear List</button>
            </form>
           
        </div>
    </body>
</html>